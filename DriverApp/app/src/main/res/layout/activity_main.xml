<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg3">

    <Button
        android:id="@+id/locatebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/ripple"
        android:onClick="onClickLocateOnMap"
        android:padding="12dp"
        android:text="Locate On Map"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start" />

    <Button
        android:id="@+id/nearbybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/ripple"
        android:onClick="onClickNearby"
        android:padding="12dp"
        android:text="Nearby Hospitals"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/nearbyps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locatebtn" />

    <Button
        android:id="@+id/addinformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple"
        android:onClick="onClickAddInformation"
        android:padding="12dp"
        android:text="Add Infromation"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/getinformation"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getinformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple"
        android:onClick="onClickGetInformation"
        android:padding="12dp"
        android:text="Get Information"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/addinformation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/ripple"
        android:padding="12dp"
        android:text="Start Location"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:background="@drawable/ripple"
        android:padding="12dp"
        android:text="Stop Location"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_start"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/nearbyps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="@drawable/ripple"
        android:onClick="onClickNearbyps"
        android:padding="12dp"
        android:text="Nearby Police Station"
        android:textAllCaps="false"
        android:textColor="#66F9B0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nearbybtn"
        app:layout_constraintTop_toBottomOf="@+id/locatebtn" />

    <Button
        android:id="@+id/helpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple"
        android:onClick="OnClickAccident"
        android:padding="12dp"
        android:text="I NEED HELP"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/safebtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearbybtn" />

    <Button
        android:id="@+id/safebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/ripple"
        android:onClick="OnClickIAmSafe"
        android:padding="12dp"
        android:text="I am Safe"
        android:textColor="#66F9B0"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/helpbtn"
        app:layout_constraintTop_toBottomOf="@+id/nearbyps" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:background="@drawable/custom_text"
        android:padding="20px"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Coordinates :- \n"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addinformation" />

</androidx.constraintlayout.widget.ConstraintLayout>